@{
    var Charities = (List<Charity>)ViewData["Charities"];
    Layout = "_Layout";
}


<div class="container" style=" margin-top:-16px;">
    <table class="table table-striped table-hover" dir="rtl">

        <div  class="row" style="background-color:white;padding-top:18px;padding-bottom:18px">
                <form class="form-inline my-2" asp-action="Search" asp-controller="Charities">
                   <input class="form-control form-size mr-sm-1" typeof="search" name="txt" placeholder="كلمة البحث هنا ..." aria-lable="" />
                    <span><button class="btn btn-color" style="border-radius: 0 !important;" type="submit"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
</svg><i class="bi bi-search"></i> </button></span>
                </form>
            </div>
            <div  class="row" style="background-color:white;margin-bottom:10px;padding-top:18px ">
                @foreach (var item in Charities)
                {


                    <div class="card col-3  text-center" style="width: 18rem; border: none !important;border-radius: 0 !important;">
                        <img src="@item.Image" class="card-img-top _image" alt="@item.Image" width="210px" height="240px">
                        <div class="card-body">
                            <h5 class="card-title">@item.CharityName</h5>
                            <div>
                                <a href="/Charities/Details/ @item.Id" class="btn btn-primary btn-color stretched-link">تفاصيل</a>
                            </div>
                        </div>
                    </div>

                }

        </div>
</table>
</div>