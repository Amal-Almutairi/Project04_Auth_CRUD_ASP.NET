
@{
    var Charities = (List<Charity>)ViewData["Charities"];


}

<div class="text-center">
    <a class="btn btn-primary" style="background-color:#948639 !important; border:solid; border-block-width:2;border-color:black;text-align:center" asp-area="" asp-controller="Charities" asp-action="Create">اضافة جمعية</a>
</div>
<div class="container" style="margin-top:50px !important ;padding-bottom:20px; text-align:center;background-color:#343a40;color:white">
   @* <a class="btn btn-primary" asp-area="" asp-controller="Charities" asp-action="Create">اضافة جمعية</a>*@

    <table class="table table-dark" style="margin-top: 50px !important ">
        <thead>
            <tr>
                <td>
                    #
                </td>
                <td>
                    اسم الجمعية الخيرية
                </td>
                <td>التفاصيل</td>
                <td>تعديل</td>
                <td>حذف</td>

            </tr>
        <tbody>
            @foreach (var Charity in Charities)
            {
                <tr>
                    <td>@Charity.Id</td>
                    <td>@Charity.CharityName</td>
                    <td><a class="btn btn-primary" href="/Charities/Details/@Charity.Id"> عرض </a></td>
                    <td><a class="btn btn-primary" asp-controller="Charities" asp-action="Edit" asp-route-id="@Charity.Id">تعديل</a></td>
                    <td>
                        <form method="post" asp-controller="Charities" asp-action="Delete" asp-route-id="@Charity.Id">
                            <input type="submit" value="حذف" class="btn btn-danger" />
                        </form>
                    </td>
                    <td>
                        <a href="/news/create/@Charity.Id" class="btn btn-outline-danger">اضافة مبادرة</a>
                    </td>
                    <td>
                        <a href="/Ambassadors/create/@Charity.Id" class="btn btn-outline-danger">اضافة سفير</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>